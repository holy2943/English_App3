<div class="flame">

  <%# ヘッダー %>
  <div class="header">
    <div class="header--message">
      My_English_Practice
    </div>
  </div>

  <%# メインコンテンツ %>
  <div class="contents">
    <%# カレンダー&youtube %>
    <div class="contents1">
      <div class="content1--right">
      <% @english_words.each do |english_word|%>
        <%= link_to english_word.key_word, english_word_path(english_word.id), class: "content__right__top--title"  %>
      <%end%>  
      </div>
      <div class="content1--left">
        youtube動画(フォニックス英単語)
      </div>
    </div>
    <%# メニューボタン %>
    <div class="contents2">
      <div class="content2--bottom">
        <%= link_to '新規単語登録', new_english_word_path, class: "content2--bottom--btn" %> 
        <%= link_to '単語の一覧', '#', class: "content2--bottom--btn" %>
        <%= link_to '単語の削除', '#' %>
        <%= link_to 'テスト', '#' %>
      </div>
    </div>
  </div>

  <%# フッター  %>
  <div class="footer">
    <div class="footer--message">
      フッター 
    </div>
  </div>
    
</div>
